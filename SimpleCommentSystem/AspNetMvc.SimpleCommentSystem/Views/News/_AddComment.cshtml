@using AspNetMvc.SimpleCommentSystem.Models;
@model CommentAddViewModel

<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        <h4 class="control-label col-md-offset-1">Добавление комментария</h4>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.Topic, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.EditorFor(model => model.Topic, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-8">
                    <input type="button" value="Создать" class="btn btn-success btn-block" onclick="SendPost()" />
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function SendPost() {
        $.ajax({
            url: '@Url.Action("AddComment")',
            type: 'POST',
            dataType: 'json',
            data:
            {
                Topic: $('#Topic').val(),
                Message: $('#Message').val() ,
                NewsId: '@ViewBag.NewsId',
            },

            success: function (data) {
                $('#Dialog').modal('hide');
                location.reload();
            },

            error: function (request, status, error) {
                // add error notification
            }
        });
    }
</script>
